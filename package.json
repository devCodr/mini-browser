{
  "name": "mini-browser",
  "version": "1.0.0",
  "main": "main.js",
  "description": "Custom Mini Browser to private sessions",
  "author": {
    "name": "Chris Larico",
    "email": "chris@larico.dev",
    "url": "https://larico.dev",
    "github": "https://github.com/devCodr/mini-browser"
  },
  "type": "module",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "package:mac": "electron-packager . MiniBrowser --platform=darwin --arch=universal --out=dist --app-bundle-id=com.larico.minibrowser --overwrite --prune=true --icon=build/icon.icns",
    "make:icon": "./scripts/make-icon.sh"
  },
  "dependencies": {
    "node-fetch": "3.3.2"
  },
  "devDependencies": {
    "electron": "38.1.2",
    "electron-builder": "26.0.12",
    "electron-packager": "^17.1.0"
  },
  "build": {
    "appId": "com.larico.minibrowser",
    "productName": "MiniBrowser",
    "copyright": "Â© 2025 Chris Larico (MIT License)",
    "linux": {
      "target": [
        "deb"
      ],
      "icon": "icon.png",
      "category": "Utility",
      "maintainer": "Chris Larico <chris@larico.dev>",
      "synopsis": "MiniBrowser"
    },
    "mac": {
      "icon": "build/icon.icns"
    }
  }
}
